{
  "name": "k2gl/phpunit-fluent-assertions",
  "description": "Improves test code readability.",
  "homepage": "https://github.com/k2gl/phpunit-fluent-assertions",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "phpunit",
    "xunit",
    "testing"
  ],
  "authors": [
    {
      "name": "Nickolay Harin",
      "email": "l0gic@ya.ru"
    }
  ],
  "require": {
    "php": ">=8.2",
    "phpunit/phpunit": "^9|^10|^11"
  },
  "autoload": {
    "psr-4": {
      "K2gl\\PHPUnitFluentAssertions\\": "src/"
    },
    "files": [
      "src/aliases.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "K2gl\\PHPUnitFluentAssertions\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "require-dev": {
    "rector/rector": "^1.0"
  }
}
